#-----------------------------------------------------------------------------

GRAPHS := \
	fsm_slave_conf \
	fsm_slave_scan \
	fsm_pdo_mapping \
	fsm_pdo_config \
	fsm_master \
	fsm_coe_map

#-----------------------------------------------------------------------------

PS = $(addsuffix .ps,$(GRAPHS))
PDF = $(addsuffix .pdf,$(GRAPHS))

#-----------------------------------------------------------------------------

all: $(PDF)

%.ps: %.dot
	dot -Tps -o $@ $<

%.pdf: %.ps
	ps2pdf $<

clean:
	@rm -f *.ps *.pdf

#-----------------------------------------------------------------------------
