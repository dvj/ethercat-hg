#-----------------------------------------------------------------------------
#
# $Id$
#
#-----------------------------------------------------------------------------

GRAPHS := \
	fsm_change \
	fsm_eoe \
	fsm_master \
	fsm_pdo_conf \
	fsm_pdo_entry_conf \
	fsm_pdo_entry_read \
	fsm_pdo_read \
	fsm_sii \
	fsm_slave_conf \
	fsm_slave_scan

#-----------------------------------------------------------------------------

PS = $(addsuffix .ps,$(GRAPHS))
PDF = $(addsuffix .pdf,$(GRAPHS))

#-----------------------------------------------------------------------------

all: pdf

pdf: $(PDF)

ps: $(PS)

%.ps: %.dot
	dot -Tps -o $@ $<

%.pdf: %.ps
	ps2pdf $<

clean:
	@rm -f *.ps *.pdf

#-----------------------------------------------------------------------------
